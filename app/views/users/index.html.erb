<h1>Family members</h1>

<table cellpadding="0" cellspacing="0" class="table">
  <tr>
    <td>No.</td>
    <td>Email</td>
    <td>Delete</td>
  </tr>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Delete', destroy_user_path(user.id), :class => "btn btn-primary", data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "Add new family member", new_user_path, :class => "btn btn-primary" %>

