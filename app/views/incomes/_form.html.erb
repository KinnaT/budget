<%= simple_form_for @income, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :source %>
  <%= f.input :amount, as: :currency, wrapper: 'append' %>
  <%= f.input :tax, collection: [['23%', 23], [ '18%', 18]], as: :radio_buttons %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
