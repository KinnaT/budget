<%= simple_form_for @expense, url: create_expense_path, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :name, label: 'Expense name' %>
  <%= f.input :amount, as: :currency, wrapper: 'append' %>
  <%= f.association :wallet, label: 'Budget', collection: current_user.wallets, include_blank: false %>
  <%= f.input :execution_date, label: 'Date', as: :date, start_year: Date.today.year-1, end_year: Date.today.year+1, order: [:day, :month, :year] %>
  <div class="form-actions">
    <%= f.button :submit, 'Add expense', class: 'btn btn-primary' %>
  </div>
<% end %>
