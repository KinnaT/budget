<% if @expenses.empty? %>
  <p>No expenses</p>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @expenses.each do |r| %>
      <tr<%= ' class=warning' if r.execution_date.future? %>>
        <td><%= r.name %></td>
        <td><%= r.amount %> pln</td>
        <td><%= r.execution_date.strftime("%d %B %Y")  %></td>
        <td>
          <%= link_to "Edit", edit_expense_path(r), class: "btn btn-primary" %>
          <%= link_to "Delete", expense_path(r), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="hidden-phone">
    <%= will_paginate @expenses %>
  </div>
<% end %>
<div class="form-actions">
  <%= link_to "Add new expense", new_expense_path, class: "btn btn-primary" %>
</div>  

